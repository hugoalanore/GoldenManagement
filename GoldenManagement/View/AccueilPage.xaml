                    <Grid Margin="0,0,1,0" Style="{StaticResource grid_entete_semaine}">
                        <TextBlock Text="JEUDI" Style="{StaticResource tb_entete_semaine}"/>
                    </Grid>
                    <Grid Margin="0,0,1,0" Style="{StaticResource grid_entete_semaine}">
                        <TextBlock Text="VENDREDI" Style="{StaticResource tb_entete_semaine}"/>
                    </Grid>
                    <Grid Margin="0,0,1,0" Style="{StaticResource grid_entete_semaine}">
