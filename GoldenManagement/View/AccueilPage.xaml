                <StackPanel Orientation="Horizontal">
                    <!-- 1er jour / 1ère ligne -->
                    <Border Style="{StaticResource bdr_jour}" BorderThickness="0,1,0,0">
                        <Grid Style="{StaticResource grid_jour}">
